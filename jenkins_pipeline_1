pipeline {
    agent any
    
    environment {
        // Define variables
        NAMESPACE_NAME = "mes"
        FEATURE_BRANCH = "${NAMESPACE_NAME}-branch"
        REPO_NAME = "Jenkins_Pipelines"        
        REPO_URL = "https://github.com/SubbuDevasani/Jenkins_Pipelines.git"
        GIT_CREDENTIALS_ID = "8d5130d3-9147-4584-ab7f-6681df65ecef"
    }
    
    stages {
        stage('Execute All Steps') {
            steps {
                script {
                    // Clone the repository
                    withCredentials([usernamePassword(credentialsId: "${GIT_CREDENTIALS_ID}", usernameVariable: 'GIT_USERNAME', passwordVariable: 'GIT_PASSWORD')]) {
                        sh """
                            git clone ${REPO_URL} -b master
                            cd ${REPO_NAME}
                        
                            git checkout -b ${FEATURE_BRANCH}
                            
                            echo "path "${NAMESPACE_NAME}/sys/namespace"" >> Appedning_file.yaml
                            
                            git add Appedning_file.yaml
                            git commit -m "Add ${NAMESPACE_NAME} value to file"
                            git push origin ${FEATURE_BRANCH}
                        """
                    }
                }
            }
        }
    }
    
    post {
    failure {
        script {
            // Remove the feature branch and revert changes
            sh """
                git checkout master
                git branch -D ${FEATURE_BRANCH}
                git push origin --delete ${FEATURE_BRANCH}
            """
        }
    }
    
    always {
        script {
            // Cleanup workspace if necessary
            cleanWs()
        }
    }
  }
}
